@model BusinessEntities.ProductEntity

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Cập nhật</h2>
<br/>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.Product_ID)

        <div class="editor-label">
            Tên sản phẩm
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            Danh mục
        </div>
        <div class="editor-field">
            @Html.DropDownList("Category_ID", String.Empty)
            @Html.ValidationMessageFor(model => model.Category_ID)
        </div>

        <div class="form-group">
            @Html.Label("Mô tả", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Description", new { @class = "ckeditor", @id = "editor" })
            </div>
        </div>

        <div class="editor-label">
            Hình ảnh
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Image)
            @Html.ValidationMessageFor(model => model.Image)
        </div>

        <div class="editor-label">
            Ngày tạo
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DateUpload)
            @Html.ValidationMessageFor(model => model.DateUpload)
        </div>

        <div class="editor-label">
            Giá
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <div class="editor-label">
            Số lượng trong kho
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumberInStock)
            @Html.ValidationMessageFor(model => model.NumberInStock)
        </div>

        <p>
            <input type="submit" value="Lưu" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Về danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
