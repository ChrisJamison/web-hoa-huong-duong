@model BusinessEntities.CategoryEntity

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh sửa</h1>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="editor-field">
            @Html.HiddenFor(model => model.Category_ID)
            @Html.ValidationMessageFor(model => model.Category_ID)
        </div>

        <div class="editor-label">
            Tên danh mục
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            Danh mục cha
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Parent_ID, new SelectList(ViewBag.CategoryDropdown, "Category_ID", "Name", Model.Name), "Không có danh mục cha")
            @Html.ValidationMessageFor(model => model.Parent_ID)
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.Level)
            @Html.ValidationMessageFor(model => model.Level)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
