@model IEnumerable<DataModel.Banner>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table>
    <tr>
        <th>
            Ảnh Banner
        </th>
        <th>
            Thứ tự
        </th>
        <th>
            Chọn làm Banner
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Ngày chỉnh sửa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="img-thumbnail">
            <img src="/Images/sanpham/sanphammoi/@item.Thumbnail" style="width: 10%;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order)
        </td>
        <td>
            @Html.EditorFor(modelItem => item.IsActivated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedDate)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>
