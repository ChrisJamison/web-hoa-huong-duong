                    @{Html.RenderAction("NewestNew", "News");}

                    <div class="kpoll27482 hide">
                        <img style="position: absolute; top: 15px; right: 15px; cursor: pointer;" class="_kclose" src="http://v1.webbnc.net/themes/web/212/core/imgs/x-altx-alt.png" width="24" height="24" />
                        <div id="basic-modal-content27482"></div>
                    </div>
                    <script>
                        $('.submit_poll27482').click(function (e) {

                            //$.post("http://mapu.vn/ajax&do=checkcap", {
                            $.post("", {
                                user_name: $("#pollcode27482").val()
                            }, function (data) {
                                if (data == 'no') {
                                    alert("Vui lòng nhập đúng mã bảo vệ!");
                                    $("#pollcode27482").focus();
                                } else {
                                    $('.kpoll27482').modal({
                                        opacity: 80,
                                        overlayCss: {
                                            backgroundColor: "#000"
                                        },
                                        containerCss: {
                                            border: 0,
                                            width: 610,
                                            height: 250
                                        },
                                        closeClass: "_kclose"
                                    });
                                    $('.modalCloseImg').hide();
                                    $("#basic-modal-content27482").html("Đang tải dữ liệu, xin vui lòng chờ...").fadeIn("slow");
                                    var actpoll = {
                                        poll: $("input[@@name='poll_27482']:checked").attr("value"),
                                        idpoll: '27482'
                                    };

                                    //$.post("http://mapu.vn/ajax&do=poll", actpoll, function (data) {
                                    $.post("", actpoll, function (data) {
                                        $("#basic-modal-content27482").html(data).fadeTo(900, 1);
                                    });

                                }
                            });

                            return false;
                        });

                        $('.xem_ket_qua27482').click(function (e) {

                            $('.kpoll27482').modal({
                                opacity: 80,
                                overlayCss: {
                                    backgroundColor: "#000"
                                },
                                containerCss: {
                                    border: 0,
                                    width: 609,
                                    height: 369
                                },
                                closeClass: "_kclose"
                            });
                            $('.modalCloseImg').hide();
                            $("#basic-modal-content27482").html("Đang tải dữ liệu, xin vui lòng chờ...").fadeIn("slow");
                            var actpoll = {
                                idpoll: '27482'
                            };
                            //$.post("http://mapu.vn/ajax&do=poll", actpoll, function (data) {
                            $.post("", actpoll, function (data) {
                                $("#basic-modal-content27482").html(data);

                            });
                            return false;
                        });
                    </script>
                    <link href="~/css/jquery.mCustomScrollbar.css" rel="stylesheet" />
                    <script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
                    <script>
                        (function ($) {
                            $(window).load(function () {
                                $("#s_maps").mCustomScrollbar({
                                    autoHideScrollbar: true,
                                    theme: "light-thin"
                                });
                            });
                        })(jQuery);
                    </script>
                    @{Html.RenderPartial("_TiGia");}")
                    @{Html.RenderPartial("_ThongKe");}
