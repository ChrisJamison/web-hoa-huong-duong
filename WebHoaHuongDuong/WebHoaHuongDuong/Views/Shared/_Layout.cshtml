                        <div class="tieude"><span class="b_spmoi"></span>Sản Phẩm Ngẫu Nhiên</div>
                        @{Html.RenderAction("_SanPhamNgauNhien", "Helper");}
                    </div>
                    <!-- tin tức ngẫu nhiên thanh bên trái-->
                    @{Html.RenderAction("RandomNew", "News");}
